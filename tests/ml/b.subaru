10 REM 1-D convolution demo (moving sum)
20 LET a=0
30 LET m[100]=1
40 LET m[101]=2
50 LET m[102]=3
60 LET m[103]=4
70 LET m[104]=5
80 LET m[105]=6
90 LET m[106]=7
100 LET m[107]=8
110 LET m[200]=1
120 LET m[201]=1
130 LET m[202]=1
140 IF a=6 THEN 260
150 LET b=0
160 LET g=0
170 IF b=3 THEN 210
180 LET g=g+m[100+a+b]*m[200+b]
